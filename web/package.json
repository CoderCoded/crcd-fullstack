  },
  "engines": {
    "node": ">=0.10.32"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "__DEVELOPMENT__",
      "__DEVTOOLS__",
      "APP_NAME",
      "CONFIG",
      "riot",
      "log"
    ]
  }
}
